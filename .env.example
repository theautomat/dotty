SOLANA_WALLET_PATH=./wallets/devnet-deployer.json
SOLANA_PROGRAM_ID=Fg6PaFpoGXkYsidMpWTK6W2BeZ7FEfcYkg476zPFsLnS

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3000
