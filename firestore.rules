rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all hidden treasures
    match /treasureDeposits/{signature} {
      // Anyone can read hidden treasures (get single doc, list collection)
      allow get, list: if true;

      // Only server (via Firebase Admin SDK) can write
      // Admin SDK bypasses these rules
      allow write: if false;
    }

    // Allow read access to treasures collection (used by TreasureGalleryPage)
    match /treasures/{signature} {
      // Anyone can read hidden treasures (get single doc, list collection)
      allow get, list: if true;

      // Only server (via Firebase Admin SDK) can write
      // Admin SDK bypasses these rules
      allow write: if false;
    }

    // Allow read access to map searches collection
    match /map_searches/{signature} {
      // Anyone can read map searches (get single doc, list collection)
      allow get, list: if true;

      // Only server (via Firebase Admin SDK) can write
      // Admin SDK bypasses these rules
      allow write: if false;
    }

    // Allow read access to game stats
    match /games/{gameId} {
      // Anyone can read game stats (get single doc, list collection)
      allow get, list: if true;

      // Only authenticated users can write their own game stats
      allow write: if request.auth != null;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
