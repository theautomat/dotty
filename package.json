{
  "name": "dotty",
  "version": "0.1.0",
  "description": "Top-down exploration game where Dotty discovers hidden treasures and digital assets",
  "main": "server.js",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "start": "serve -s dist",
    "vite": "vite",
    "dev": "npm run build && npm run server:prod",
    "dev:watch": "nodemon --watch src --exec \"npm run build && npm run server:prod\" --ext js,html,css",
    "build": "vite build",
    "preview": "vite preview",
    "server": "NODE_ENV=development nodemon --exec tsx server.js",
    "server:dev": "NODE_ENV=development tsx watch --clear-screen=false --exclude 'test-ledger/**' --exclude '*.log' server.js",
    "server:prod": "NODE_ENV=production tsx server.js",
    "heroku-postbuild": "npm run build",
    "test:solana": "cd solana && anchor test",
    "test:solana:local": "cd solana && anchor test --skip-deploy",
    "test:solana:devnet": "cd solana && anchor test --provider.cluster devnet",
    "dev:local": "./scripts/dev-local.sh",
    "dev:all": "./scripts/dev-all.sh",
    "solana:validator": "./scripts/start-local-validator.sh",
    "solana:setup": "./scripts/setup-local-test.sh",
    "solana:analyze": "./scripts/analyze-blockchain.sh",
    "solana:test-ui": "echo 'Open http://localhost:3000/hide-treasure-test.html in your browser' && npm run server:prod",
    "firebase:emulator": "firebase emulators:start --only firestore --project demo-project",
    "test:webhook": "node test-helius-webhook.js",
    "dev:monitor": "NODE_ENV=development npx ts-node local-transaction-monitor.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.28.0",
    "@fingerprintjs/fingerprintjs-pro": "^3.8.1",
    "@solana/spl-token": "^0.4.8",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.95.2",
    "bs58": "^6.0.0",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "firebase": "^10.7.0",
    "firebase-admin": "^13.6.0",
    "postprocessing": "^6.37.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve": "^14.2.4",
    "three": "^0.159.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/express": "^5.0.5",
    "@types/mocha": "^10.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "chai": "^4.3.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "connect-livereload": "^0.6.1",
    "livereload": "^0.9.3",
    "mocha": "^10.0.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "packageManager": "pnpm@10.6.4+sha512.da3d715bfd22a9a105e6e8088cfc7826699332ded60c423b14ec613a185f1602206702ff0fe4c438cb15c979081ce4cb02568e364b15174503a63c7a8e2a5f6c"
}
